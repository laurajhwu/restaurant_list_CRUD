<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" value="{{ keyword }}" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
        <div class="w-100 text-center mt-2">
            <a href="./restaurants/new">
                <button type="button" class="btn btn-outline-light text-secondary">新增餐廳</button>
            </a>
        </div>
    </div>
</div>

{{!-- sort --}}
<section class="container d-flex justify-content-end mt-2 mb-5 sort-options">
    <div class="dropdown">
        <button class="btn dropdown-toggle d-flex justify-content-between align-items-center" type="button"
            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{ currentSelection }}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/sort/_id/Asc">請選則排列</a>
            <a class="dropdown-item" href="/sort/name/Asc">店名：A到Z</a>
            <a class="dropdown-item" href="/sort/name/Desc">店名：Z到A</a>
            <a class="dropdown-item" href="/sort/category/Asc">類別</a>
            <a class="dropdown-item" href="/sort/rating/Desc">評分：由高到低</a>
            <a class="dropdown-item" href="/sort/rating/Asc">評分：由低到高</a>
        </div>
    </div>
</section>


<!-- restaurant list -->
<div class="container mt-4">
    <div class="row">
        {{#each restaurants}}
        <div class="col-sm-4 col-md-3 ">
            <div class="card mb-3">
                <a href="./restaurants/{{ this._id }}" class="text-secondary">
                    <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
                </a>
                <div class="card-body p-3">
                    <h6 class="card-title mb-1">{{ this.name }}</h6>

                    <div class="restaurant-category mb-1">
                        <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                    </div>

                    <span class="badge badge-pill badge-danger font-weight-normal h-50">
                        {{ this.rating }}
                        <i class="fas fa-star fa-xs"></i>
                    </span>
                </div>

                <div class="card-footer d-flex justify-content-end w-100">
                    <a href="./restaurants/{{ this._id }}" class="text-decoration-none">
                        <button type="button" class="btn btn-outline-success btn-sm">關於</button>
                    </a>

                    <a href="./restaurants/{{ this._id }}/edit">
                        <button type="button" class="btn btn-outline-warning btn-sm text-right mx-2">編輯</button>
                    </a>
                    <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
</div>
</div>